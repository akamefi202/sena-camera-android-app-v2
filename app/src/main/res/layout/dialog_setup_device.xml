<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/rounded_bottom_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="40dp"
        android:paddingHorizontal="16dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:paddingHorizontal="32dp"
            android:text="@string/dialog_set_up_device_before_connecting"
            android:textAlignment="center"
            android:textSize="@dimen/dialog_desc_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal">
            <android.widget.Button
                android:id="@+id/cancel_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/button_min_height"
                android:background="@drawable/rounded_gray_small_button"
                android:layout_weight="1"
                android:layout_marginEnd="10dp"
                android:textAllCaps="false"
                android:textSize="@dimen/button_text_size"
                android:textStyle="bold"
                android:text="@string/action_cancel" />

            <android.widget.Button
                android:id="@+id/agree_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/button_min_height"
                android:textColor="@color/selector_button_text_black_color"
                android:background="@drawable/rounded_white_button"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:textSize="@dimen/button_text_size"
                android:textStyle="bold"
                android:text="@string/action_agree" />
        </LinearLayout>

        <TextView
            android:id="@+id/not_show_again_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/selector_text_gray_color"
            android:text="@string/dialog_not_show_again" />

    </LinearLayout>

</RelativeLayout>