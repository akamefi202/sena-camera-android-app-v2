<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/full_transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/bluetooth_device_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_gray_section"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingVertical="24dp"
        android:paddingStart="16dp"
        android:paddingEnd="24dp"
        android:minHeight="96dp">
        <ImageView
            android:id="@+id/camera_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="90dp"
            android:maxHeight="90dp"
            android:scaleType="centerInside"
            android:layout_marginEnd="16dp"
            android:src="@drawable/prism2_camera"
            android:adjustViewBounds="true" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/device_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@string/prism2"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/device_address_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="B/D: ********1234"
                android:textSize="16sp"
                android:textColor="@color/text_dark_gray" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>