<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/background_primary_color"
    tools:context=".ui.fragment.FragmentFirmwareUpdate">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- top bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp">
            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/action_back"
                android:background="@drawable/selector_button_back" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/firmware_update" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />
            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <!-- firmware version layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_gray_section"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="32dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/current_camera_image"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:scaleType="fitCenter"
                android:layout_marginBottom="16dp"
                android:src="@drawable/prism2_camera" />

            <!-- version updating layout -->
            <LinearLayout
                android:id="@+id/version_updating_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:paddingHorizontal="8dp"
                android:gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:orientation="horizontal"
                    android:gravity="center">
                    <ProgressBar
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginEnd="8dp"
                        android:indeterminateTint="@color/yellow"
                        android:indeterminate="true" />
                    <TextView
                        android:id="@+id/firmware_update_status_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Updating... 65%" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/firmware_update_progress_bar"
                    android:progressDrawable="@drawable/custom_progress_bar"
                    android:progress="65"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />
            </LinearLayout>

            <!-- version info layout -->
            <LinearLayout
                android:id="@+id/version_info_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal">

                <!-- current version -->
                <RelativeLayout
                    android:id="@+id/current_version_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/current_version_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:textSize="24sp"
                            android:text="1.1.6" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray"
                            android:text="@string/current_version" />
                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:id="@+id/version_divider"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/divider_gray_color" />

                <!-- latest version -->
                <RelativeLayout
                    android:id="@+id/latest_version_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <View
                                android:layout_width="24dp"
                                android:layout_height="0dp" />
                            <TextView
                                android:id="@+id/latest_version_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="24sp"
                                android:text="1.1.7" />
                            <View
                                android:layout_width="8dp"
                                android:layout_height="0dp" />
                            <ImageView
                                android:id="@+id/version_status_icon"
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="top"
                                android:src="@drawable/status_firmware_new" />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="@color/text_gray"
                            android:text="@string/latest_version" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- device language selection -->
        <LinearLayout
            android:id="@+id/firmware_language_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="24dp"
            android:paddingHorizontal="16dp"
            android:background="@drawable/rounded_gray_section">
            <com.sena.senacamera.ui.component.MenuSelection
                android:id="@+id/firmware_language_menu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:menu_selection_underline="false"
                app:menu_selection_title="@string/language"
                app:menu_selection_value="English" />
        </LinearLayout>

        <!-- warning text layout -->
        <LinearLayout
            android:id="@+id/warning_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/icon_language" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/text_gray"
                    android:text="@string/warning_select_device_language" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/icon_battery_info" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:textColor="@color/text_gray"
                    android:text="@string/warning_charge_battery" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- bottom button layout -->
        <LinearLayout
            android:id="@+id/bottom_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.widget.Button
                android:id="@+id/update_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/button_min_height"
                android:background="@drawable/rounded_yellow_button"
                android:textColor="@color/selector_button_text_black_color"
                android:text="@string/action_update"
                android:textSize="@dimen/button_text_size"
                android:textStyle="bold"
                android:textAllCaps="false" />
            <android.widget.Button
                android:id="@+id/ok_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/button_min_height"
                android:background="@drawable/rounded_yellow_button"
                android:textColor="@color/selector_button_text_black_color"
                android:visibility="gone"
                android:text="@string/action_ok"
                android:textSize="@dimen/button_text_size"
                android:textStyle="bold"
                android:textAllCaps="false" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="32dp" />
    </LinearLayout>

    <!-- fragment container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>