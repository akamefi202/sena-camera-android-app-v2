<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/background_primary_color"
    tools:context=".ui.fragment.FragmentNewPassword">

    <!-- new password layout -->
    <LinearLayout
        android:id="@+id/new_password_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="64dp"
        android:paddingBottom="48dp"
        android:paddingHorizontal="16dp">

        <!-- title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:paddingHorizontal="16dp"
            android:text="@string/new_password"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="28sp" />

        <!-- password input -->
        <com.sena.senacamera.ui.component.CustomPasswordInput
            android:id="@+id/new_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- requirements -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:paddingStart="4dp"
                android:paddingEnd="8dp">
                <ImageView
                    android:id="@+id/password_count_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/status_password_check_off"
                    android:layout_marginEnd="6dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/password_character_count_range" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingStart="4dp"
                android:paddingEnd="8dp">
                <ImageView
                    android:id="@+id/password_character_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/status_password_check_off"
                    android:layout_marginEnd="6dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/password_character_restriction" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.widget.Button
                android:id="@+id/next_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="false"
                android:minHeight="@dimen/button_min_height"
                android:background="@drawable/rounded_yellow_button"
                android:textColor="@color/selector_button_text_black_color"
                android:textAllCaps="false"
                android:textSize="@dimen/button_text_size"
                android:textStyle="bold"
                android:text="@string/action_next" />
        </LinearLayout>

    </LinearLayout>

    <!-- confirm password layout -->
    <LinearLayout
        android:id="@+id/confirm_password_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_primary_color"
        android:visibility="gone"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingTop="64dp"
        android:paddingBottom="48dp"
        android:paddingHorizontal="16dp">

        <!-- title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:paddingHorizontal="16dp"
            android:text="@string/confirm_password"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="28sp" />

        <!-- password input -->
        <com.sena.senacamera.ui.component.CustomPasswordInput
            android:id="@+id/confirm_password_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp" />

        <!-- requirements -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:paddingStart="4dp"
                android:paddingEnd="8dp">
                <ImageView
                    android:id="@+id/password_match_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/status_password_check_off"
                    android:layout_marginEnd="6dp" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/password_match" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- buttons  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <android.widget.Button
                android:id="@+id/back_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="@dimen/button_min_height"
                android:background="@drawable/rounded_gray_button"
                android:textColor="@color/selector_button_text_white_color"
                android:textAllCaps="false"
                android:textSize="@dimen/button_text_size"
                android:textStyle="bold"
                android:text="@string/action_back" />
            <View
                android:layout_width="8dp"
                android:layout_height="0dp" />
            <android.widget.Button
                android:id="@+id/ok_button"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="false"
                android:minHeight="@dimen/button_min_height"
                android:background="@drawable/rounded_yellow_button"
                android:textColor="@color/selector_button_text_black_color"
                android:textAllCaps="false"
                android:textSize="@dimen/button_text_size"
                android:textStyle="bold"
                android:text="@string/action_ok" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
