<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/background_primary_color"
    tools:context=".ui.activity.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- top bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/device_list_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/action_device_list"
                android:background="@color/full_transparent"
                android:src="@drawable/selector_button_device_list" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/settings_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/action_setting"
                android:background="@drawable/selector_button_setting" />
        </LinearLayout>

        <!-- middle section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:visibility="visible"
            android:paddingTop="32dp"
            android:paddingBottom="24dp"
            android:paddingHorizontal="24dp"
            android:layout_weight="1"
            android:layout_marginBottom="24dp"
            android:background="@drawable/rounded_gray_section" >

            <LinearLayout
                android:id="@+id/connected_status_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="visible"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:id="@+id/firmware_version_status"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_version_tag"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:textSize="14sp"
                    android:text="@string/version_1_0" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <ImageView
                        android:id="@+id/camera_sd_card_status"
                        android:src="@drawable/status_sd_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp" />
                    <ImageView
                        android:id="@+id/camera_battery_status"
                        android:src="@drawable/camera_battery_100"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="6dp" />
                    <TextView
                        android:id="@+id/camera_battery_text"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100%" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/disconnected_status_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                android:orientation="horizontal"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/text_dark_gray"
                    android:text="@string/not_connected" />
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/status_disconnected" />
            </LinearLayout>

            <TextView
                android:id="@+id/device_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="24sp"
                android:text="Prism 2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/camera_image"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/prism2_camera"
                    android:adjustViewBounds="true"/>
            </LinearLayout>

            <android.widget.Button
                android:id="@+id/preview_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/button_min_height"
                android:background="@drawable/rounded_yellow_button"
                android:textColor="@color/selector_button_text_black_color"
                android:text="@string/action_preview"
                android:textAllCaps="false"
                android:textSize="@dimen/button_text_size"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />
            <android.widget.Button
                android:id="@+id/connect_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/button_min_height"
                android:background="@drawable/rounded_gray_button"
                android:textColor="@color/selector_button_text_white_color"
                android:text="@string/action_connect"
                android:textAllCaps="false"
                android:textSize="@dimen/button_text_size"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_marginTop="16dp" />
        </LinearLayout>

        <!-- bottom buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="56dp"
            android:paddingTop="20dp"
            android:paddingBottom="24dp">

            <LinearLayout
                android:id="@+id/media_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageButton
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/selector_button_media" />
                <TextView
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_media" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/preference_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageButton
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/selector_button_preference" />
                <TextView
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_preference" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- fragment container -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</androidx.constraintlayout.widget.ConstraintLayout>