<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:background="@color/background_primary_color"
    tools:context=".ui.activity.MediaActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="16dp"
        android:orientation="vertical"
        android:gravity="center">

        <!-- top bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:contentDescription="@string/action_back"
                android:background="@drawable/selector_button_back" />
            <ImageButton
                android:id="@+id/close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:contentDescription="@string/action_close"
                android:visibility="gone"
                android:background="@drawable/selector_button_close" />

            <TextView
                android:id="@+id/title_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/title_media"
                android:textSize="@dimen/title_size"
                android:textAlignment="center"
                android:textColor="@color/text_white"
                android:layout_weight="1" />
            <TextView
                android:id="@+id/selected_number_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="0/16"
                android:textSize="@dimen/title_size"
                android:textAlignment="center"
                android:textColor="@color/text_white"
                android:visibility="gone"
                android:layout_weight="1" />

            <Button
                android:id="@+id/select_button"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:textColor="@color/selector_button_text_color"
                android:text="@string/action_select"/>
            <Button
                android:id="@+id/deselect_button"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:visibility="gone"
                android:textColor="@color/selector_button_text_color"
                android:text="@string/action_deselect"/>
            <Button
                android:id="@+id/select_all_button"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:padding="0dp"
                android:visibility="gone"
                android:textColor="@color/yellow"
                android:text="@string/action_select_all"/>
        </LinearLayout>

        <!-- media tab view -->
        <com.google.android.material.tabs.TabLayout
            android:id="@+id/media_tab_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/background_primary_color"
            app:tabTextColor="@color/button_pressed_color"
            app:tabSelectedTextColor="@color/yellow"
            app:tabIndicatorColor="@color/yellow"
            app:tabIndicatorHeight="1dp"
            app:tabIndicatorFullWidth="true">
            <com.google.android.material.tabs.TabItem
                android:text="@string/title_device"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <com.google.android.material.tabs.TabItem
                android:text="@string/title_storage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </com.google.android.material.tabs.TabLayout>

<!--        <androidx.viewpager2.widget.ViewPager2-->
<!--            android:id="@+id/media_viewpager"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="0dp"-->
<!--            android:layout_weight="1" />-->

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- bottom bar -->
        <LinearLayout
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingTop="20dp"
            android:paddingBottom="40dp">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/save_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageButton
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/action_save"
                    android:background="@drawable/selector_button_download" />
                <TextView
                    android:textColor="@color/selector_button_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_save" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:orientation="vertical">
                <ImageButton
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/action_share"
                    android:background="@drawable/selector_button_share" />
                <TextView
                    android:textColor="@color/selector_button_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_share" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">
                <ImageButton
                    android:clickable="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@string/action_delete"
                    android:background="@drawable/selector_button_delete_white" />
                <TextView
                    android:textColor="@color/selector_button_text_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_delete" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>